---
import { Image } from 'astro:assets'
const { title, features } = Astro.props
---

<section>
  <div class="container mx-auto px-6">
    {title && <h2 class="text-black text-3xl md:text-5xl leading-[120%] font-adamina mb-8 px-6 max-w-[430px]">{title}</h2>}

    <ul class="grid md:grid-cols-3 gap-6">
      {features && features.map((feature) => (
        <li class="bg-white">
          <h3 class="p-6 text-black text-xl font-adamina capitalize">{feature.title}</h3>
          <img
            src={feature.image}
            alt={feature.title}
            class="w-full h-auto"
            loading="lazy"
          />
          <p class="p-6 text-black opacity-65">{feature.description}</p>
        </li>
      ))}
    </ul>
  </div>
</section>
